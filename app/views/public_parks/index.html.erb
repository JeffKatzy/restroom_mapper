<!DOCTYPE html>
<html>
  <head>
    <style type="text/css">
      html, body { height: 100%; margin: 0; padding: 0; }
      #map { height: 100%; }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <script type="text/javascript">

var map;
function initMap() {
  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: -34.397, lng: 150.644},
    zoom: 8
  });
}

function initMap() {
  var myLatLng = {lat: 40.712784, lng:-74.005941 };

  var map = new google.maps.Map(document.getElementById('map'), {
    zoom: 10,
    center: myLatLng
  });

  // var marker = new google.maps.Marker({
  //   position: myLatLng,
  //   map: map,
  //   title: 'Hello World!'
  // });



  <%counter = 0%>
  //putting erb into javascript to create multiple tags on google map for locations in our db -- public parks controller to iterate through lat lng
  <% @parks.each do |park| %>

  
var <%= "contentString" + counter.to_s%> = "<%= park.name%>"
   
var <%= "infowindow" + counter.to_s%> = new google.maps.InfoWindow({
    content:<%= "contentString" + counter.to_s%>
  });



  var <%= "park" + counter.to_s%> = new google.maps.Marker({
    position: {lat: <%=park.latitude%>, lng: <%=park.longitude%>},   
    map: map,
    title: "<%=park.name%>"
   
  });

    <%= "park" + counter.to_s%>.addListener('click', function() {
    <%= "infowindow" + counter.to_s%>.open(map, <%= "park" + counter.to_s%>);
  });
     <% counter += 1 %>

  <% end %> // closing our open erb 
}

    </script>
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCqF6HleM6x7DGblO5v4nsY9-8jzuucCIo&callback=initMap">
    </script>
  </body>
</html>